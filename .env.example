# ============================================
# VARIABLES DE ENTORNO - IA MONITOR
# ============================================
# Copia este archivo como .env y rellena con tus valores reales

# === API KEYS ===
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Database (Docker Compose)
POSTGRES_USER=iamonitor
POSTGRES_PASSWORD=iamonitor_dev_password
POSTGRES_DB=iamonitor
DATABASE_URL=postgresql://iamonitor:iamonitor_dev_password@localhost:5432/iamonitor

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# YouTube API (opcional si usas yt-dlp)
YOUTUBE_API_KEY=opcional_si_usas_api_oficial

# Email notifications (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password

# Telegram bot (opcional)
TELEGRAM_BOT_TOKEN=tu_token_de_bot_aqui
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# === SEGURIDAD Y AUTENTICACIÓN ===
# IMPORTANTE: Cambiar JWT_SECRET_KEY en producción con un valor aleatorio de 32+ caracteres
JWT_SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true

# CORS Configuration (separar con comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Trusted Hosts (solo producción)
TRUSTED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# === MONITORING ===
# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_in_production

